    <div id="container">
        <!-- Loading Screen -->
        <div id="loading">
            <div class="loader"></div>
            <h1>âœ¨ Bride AR Experience âœ¨</h1>
            <p>Experience magical AR without complex 3D!</p>
            <button id="start-btn">Start Experience</button>
        </div>
        
        <!-- Camera Video -->
        <video id="video" autoplay muted playsinline></video>
        
        <!-- AR Overlay -->
        <div id="ar-overlay">
            <!-- Surface Detector -->
            <div id="surface-detector">
                TAP HERE<br>
                TO SUMMON<br>
                THE BRIDE
            </div>
            
            <!-- Bride Container -->
            <div id="bride-container">
                <div class="bride-figure">
                    <div class="bride-veil"></div>
